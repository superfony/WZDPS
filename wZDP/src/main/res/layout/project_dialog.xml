<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pup_pop"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="#F8F8FF">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

            <TextView
                android:id="@+id/username_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位名称"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/spinner1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/projectname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目名称"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/projecttext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/factory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工厂"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/factorytext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
             <TextView
                android:id="@+id/project_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目类型"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/typetext"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout> 

       <LinearLayout
            android:id="@+id/pop_layout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/projecttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目创建时间 "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/buildtime"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目实际开工时间 "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/projectstart"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/actualtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目实际投产时间 "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/facttime"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/Voltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电压等级"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/Voltage_Class"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" /> 
      
    </LinearLayout>
	<Button
	    android:id="@+id/select"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="200dp"
		android:text="查询"
        android:textStyle="bold"
	    />
</LinearLayout>