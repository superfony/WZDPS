<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="27dip" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="27dip"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="140dip"
        android:orientation="horizontal" >

        <TableLayout
            android:id="@+id/dataTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:shrinkColumns="1" >

            <TableRow android:gravity="top" >

                <TextView
                    android:id="@+id/title"
                    style="@style/nowwork_baks"
                    android:layout_marginTop="20dip" />

                <TextView
                    android:id="@+id/titleValue"
                    style="@style/nowwork_bak"
                    android:layout_marginTop="20dip"
                    android:ems="18"/>
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TableRow>

                <TextView
                    android:id="@+id/num"
                    style="@style/nowwork_baks" />

                <TextView
                    android:id="@+id/numValue"
                    style="@style/nowwork_bak" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TableRow>

                <TextView
                    android:id="@+id/time"
                    style="@style/nowwork_baks"/>

                <TextView
                    android:id="@+id/timeValue"
                    style="@style/nowwork_bak" />
            </TableRow>

            <TextView android:layout_height="20dip" />
        </TableLayout>

        <TableLayout
            android:id="@+id/dataTable2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:shrinkColumns="1" >

            <TableRow android:gravity="top" >

                <TextView
                    android:id="@+id/itme"
                    style="@style/nowwork_baks"
                    android:visibility="gone"
                    android:layout_marginTop="20dip" />

                <TextView
                    android:id="@+id/itmeValue"
                    style="@style/nowwork_bak"
                    android:visibility="gone"
                    android:layout_marginTop="20dip" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TableRow>

                <TextView
                    android:id="@+id/colour"
                    style="@style/nowwork_baks"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/colourValue"
                    style="@style/nowwork_bak"
                    android:visibility="gone" 
                    android:ems="6"/>
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TableRow>

                <TextView
                    android:id="@+id/six"
                    style="@style/nowwork_baks"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/sixValue"
                    style="@style/nowwork_bak"
                    android:visibility="gone" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/seven"
                    style="@style/nowwork_baks"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/sevenValue"
                    style="@style/nowwork_bak"
                    android:visibility="gone" />
            </TableRow>

            <TextView android:layout_height="20dip" />
        </TableLayout>
        <TableLayout
            android:id="@+id/dataTable3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:shrinkColumns="1" >
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TableRow >

                <TextView
                    android:id="@+id/count"
                    style="@style/nowwork_baks"
                    android:visibility="gone" 
                    android:layout_marginTop="20dip" />

                <TextView
                    android:id="@+id/countValue"
                    style="@style/nowwork_bak"
                    android:visibility="gone" 
                    android:layout_marginTop="20dip" />
            </TableRow>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TextView android:layout_height="20dip" />
        </TableLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/fony/Desktop/fony/as/asprojects/Android-Gradle-Examples-master/WZDP1/wZDP/src/main/res/layout/nowwork_content_item_bak.xml -->