            <ImageView
                android:id="@+id/fittings_progress"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/projinju_btn_bg" />
        </LinearLayout>
    </ScrollView>

